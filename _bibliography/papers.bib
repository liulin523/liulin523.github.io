	doi = {10.1038/s41612-024-00866-0},
	journal = {npj Climate and Atmospheric Science},
	month = {December},
	number = {1},
	pages = {308},
	title = {Unraveling the non-linear relationship between seasonal deformation and permafrost active layer thickness},
	url = {https://doi.org/10.1038/s41612-024-00866-0},
	volume = {7},
	year = {2024},
