	journal = {Cold Regions Science and Technology},
	pages = {59--67},
	title = {Carbon and geochemical properties of cryosols on the North Slope of Alaska},
	volume = {100},
	year = {2014},
	bdsk-url-1 = {https://doi.org/10.1016/j.coldregions.2014.01.001}}

@article{liu2014fire,
	abbr = {GRL},
	altmetric = {true},
	annote = {Wildfire is a major disturbance in the Arctic tundra and boreal forests, having a significant impact on soil hydrology, carbon cycling, and permafrost dynamics. This study explores the use of the microwave Interferometric Synthetic Aperture Radar (InSAR) technique to map and quantify ground surface subsidence caused by the Anaktuvuk River fire on the North Slope of Alaska. We detected an increase of up to 8 cm of thaw-season ground subsidence after the fire, which is due to a combination of thickened active layer and permafrost thaw subsidence. Our results illustrate the effectiveness and potential of using InSAR to quantify fire impacts on the Arctic tundra, especially in regions underlain by ice-rich permafrost. Our study also suggests that surface subsidence is a more comprehensive indicator of fire impacts on ice-rich permafrost terrain than changes in active layer thickness alone.},
	author = {Liu, Lin and Jafarov, Elchin and Schaefer, Kevin and Jones, Benjamin M and Zebker, Howard A and Williams, Christopher A and Rogan, John and Zhang, Tingjun},
