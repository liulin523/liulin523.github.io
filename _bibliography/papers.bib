	pages = {1152},
	title = {Sentinel-1 InSAR measurements of elevation changes over yedoma uplands on Sobo-Sise Island, Lena Delta},
	volume = {10},
	year = {2018},
	bdsk-url-1 = {https://doi.org/10.3390/rs10071152}}

