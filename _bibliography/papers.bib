	journal = {Earth and Space Science},
	month = {June},
	pages = {e2020EA001630},
	title = {Permafrost Dynamics Observatory ({PDO}) Part I: Postprocessing and Calibration Methods of {UAVSAR} L-band {InSAR} Data for Seasonal Subsidence Estimation},
	year = 2021,
	bdsk-url-1 = {https://doi.org/10.1029%2F2020ea001630},
