	dimensions = {true},
	doi = {10.1111/j.1365-246X.2011.05317.x},
	journal = {Geophysical Journal International},
	number = {3},
	pages = {994--1006},
	title = {Constraining ice mass loss from Jakobshavn Isbr{\ae} (Greenland) using InSAR-measured crustal uplift},
	url = {https://academic.oup.com/gji/article/188/3/994/692309},
	volume = {188},
	year = {2012},
