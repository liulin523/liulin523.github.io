	date-added = {2025-06-21 16:04:31 +0200},
	date-modified = {2025-06-21 16:06:22 +0200},
	dimensions = {true},
	doi = {10.1016/j.jhydrol.2025.132847},
	journal = {Journal of Hydrology},
	month = jun,
