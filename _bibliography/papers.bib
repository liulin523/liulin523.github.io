	number = {12},
	pages = {10,626--10,642},
	title = {Transient variations in glacial mass near Upernavik Isstr{\o}m (west Greenland) detected by the combined use of GPS and GRACE data},
	url = {https://doi.org/10.1002/2017JB014529},
	volume = {122},
	year = {2017},
